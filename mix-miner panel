  <main>
    <form id="licenseForm">
      <label for="email">Kullanıcı E-posta</label>
      <input type="email" id="email" name="email" required />

      <label for="duration">Lisans Süresi</label>
      <select id="duration" name="duration" required>
        <option value="10gün">10 Gün (Demo)</option>
        <option value="1ay">1 Ay</option>
        <option value="3ay">3 Ay</option>
        <option value="6ay">6 Ay</option>
        <option value="12ay">12 Ay</option>
      </select>

      <button type="submit">Lisans Anahtarı Oluştur ve Gönder</button>
    </form>
    <div id="result"></div>
  </main>
  <footer>
    © 2025 Mix Miner | Tüm hakları saklıdır.
  </footer>
  <script>
    document.getElementById("licenseForm").addEventListener("submit", function(e) {
      e.preventDefault();
      const email = document.getElementById("email").value;
      const duration = document.getElementById("duration").value;
      const licenseKey = "MM-" + Math.random().toString(36).substr(2, 8).toUpperCase();

      document.getElementById("result").innerHTML = `
        <p><strong>Lisans Anahtarı:</strong> ${licenseKey}</p>
        <p>${email} adresine ${duration} sürelik lisans gönderildi (Demo)</p>
      `;
    });
  </script>
